function _init()
	busInit()
	passangerInit()
end

function _draw()
	cls()
	map(0, 0, 0, 0, 33, 6)
	
	if(bus.checkPick == 0) then
		passangerDraw()
	end
	busDraw()
	print(bus.xposition, xposition, 0, 7)
	
	
end

function _update()
	busMove()
	if(bus.xposition > 30) then
		camera(0 + bus.xposition-30, 0)
	else
		camera(0, 0)
	end
	
end





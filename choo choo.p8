function _init()
	businit()
	passangerinit()
end

function _draw()
	cls()
	map(0, 0, 0, 0, 33, 6)
	
	if(bus.checkpick == 0) then
		passangerdraw()
	end
	busdraw()
	print(bus.xposition, xposition, 0, 7)
	
	
end

function _update()
	busmove()
	if(bus.xposition > 30) then
		camera(0 + bus.xposition-30, 0)
	else
		camera(0, 0)
	end
	
end





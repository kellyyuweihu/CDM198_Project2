function busInit()
	bus = {}
	bus.sprite = 70
	bus.xposition = 10
	bus.yposition = 29
	bus.height = 2
	bus.width = 4
	bus.checkPick = 0

end

function busMove()
	
	if (btn(0)) then
		if (bus.xposition-1 > 0) then
			bus.xposition = bus.xposition-1
		end
	elseif (btn(1)) then
		if (bus.xposition + 1 < 250) then
			bus.xposition = bus.xposition + 1
		end
	end
	if (btn(2)) then
		bus.checkPick = 1
	end
end


function busDraw()
	spr(bus.sprite, bus.xposition, bus.yposition, bus.width, bus.height)

end

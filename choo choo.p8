function businit()
	bus = {}
	bus.sprite = 70
	bus.xposition = 10
	bus.yposition = 29
	bus.height = 2
	bus.width = 4
	bus.checkpick = 0

end

function busmove()
	
	if (btn(0)) then
		if (bus.xposition-1 > 0) then
			bus.xposition = bus.xposition-1
		end
	elseif (btn(1)) then
		if (bus.xposition + 1 < 250) then
			bus.xposition = bus.xposition + 1
		end
	end
	if (btn(2)) then
		bus.checkpick = 1
	end
end


function busdraw()
	spr(bus.sprite, bus.xposition, bus.yposition, bus.width, bus.height)

end
